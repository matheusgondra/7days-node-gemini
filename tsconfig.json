{
	"compilerOptions": {
		"lib": ["ES2023"],
		"module": "Node16",
		"target": "ES2022",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"noEmit": true,
		"noEmitOnError": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
